" Modeline {
" vim: set foldmarker={,} foldlevel=0 foldmethod=marker :
" }

" Plugin Configuration {
Plug 'jasonmorganson/vim-pluginrc'
" }

" General {
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-abolish'
Plug 'tpope/vim-speeddating'
Plug 'tpope/vim-unimpaired'
Plug 'ntpeters/vim-better-whitespace'
Plug 'Chiel92/vim-autoformat'
Plug '907th/vim-auto-save'
" }

" Editor Configuration {
Plug 'tpope/vim-sleuth'
Plug 'editorconfig/editorconfig-vim'
Plug 'MarcWeber/vim-addon-local-vimrc'
" }

" Movement {
Plug 'justinmk/vim-sneak'
" OR
Plug 'Lokaltog/vim-easymotion'
" }

" Editing {
Plug 'itchyny/vim-cursorword'
Plug 'jiangmiao/auto-pairs'
Plug 'andymass/vim-matchup'
" }

" IDE {
Plug 'sjl/gundo.vim'
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': 'yes \| ./install' }
Plug 'junegunn/fzf.vim'
Plug 'junegunn/vim-peekaboo'
" }

" GUI {
Plug 'jszakmeister/vim-togglecursor'
Plug 'milkypostman/vim-togglelist'
Plug 'kshenoy/vim-signature'
" }

" Colorschemes {
Plug 'jasonmorganson/vim-colorscheme'
"Plug 'gerw/vim-HiLinkTrace'
"Plug 'godlygeek/csapprox'
"Plug 'lilydjwg/colorizer'
"Plug 'SyntaxAttr.vim'
"Plug 'guns/xterm-color-table.vim'
" }

" Unite {
Plug 'Shougo/denite.nvim'
" }

" Airline {
Plug 'bling/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'edkolev/tmuxline.vim'
Plug 'edkolev/promptline.vim'
" }

" Completion & Snippets {
if has('nvim')
    Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
else
    Plug 'Shougo/deoplete.nvim'
    Plug 'roxma/nvim-yarp'
    Plug 'roxma/vim-hug-neovim-rpc'
endif
Plug 'Shougo/neco-vim'
Plug 'Shougo/neco-syntax'
Plug 'zchee/deoplete-go'
Plug 'zchee/deoplete-zsh'
Plug 'zchee/deoplete-jedi'
Plug 'landaire/deoplete-swift'
Plug 'carlitux/deoplete-ternjs', { 'do': 'npm install -g tern'  }
Plug 'wokalski/autocomplete-flow'
" }

" Programing {
Plug 'w0rp/ale'
Plug 'scrooloose/nerdcommenter'
Plug 'tomtom/tcomment_vim'
" }

" Git {
Plug 'tpope/vim-git'
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-rhubarb'
Plug 'gregsexton/gitv'
Plug 'airblade/vim-gitgutter'
Plug 'mattn/gist-vim'
" }

" Javascript, Typescript, Coffeescript, Node.js, JSX, & AngularJS {
Plug 'moll/vim-node'
Plug 'afshinm/npm.vim'
Plug 'flowtype/vim-flow'
Plug 'othree/jspc.vim'
Plug 'Quramy/vison'
if has('nvim')
    Plug 'mhartington/nvim-typescript', {'do': './install.sh'}
endif
" }

" Filetypes {
Plug 'sheerun/vim-polyglot'
" }

" Testing {
Plug 'janko-m/vim-test'
Plug 'ahmedelgabri/vim-ava-snippets'
" }

" Debugging {
"Plug 'joonty/vdebug.git'
" }

" Tmux {
Plug 'tmux-plugins/vim-tmux'
Plug 'tmux-plugins/vim-tmux-focus-events'
" }

" Terminal {
"Plug 'kassio/neoterm'
"Plug 'brettanomyces/nvim-editcommand'
" }

" Misc {
Plug 'mrtazz/simplenote.vim'
"Plug 'wakatime/vim-wakatime'
" }

" Bootstrap plugins {
if exists('s:bootstrap')
    if s:bootstrap
        execute 'PlugInstall'
        unlet s:bootstrap
    endif
endif
" }
