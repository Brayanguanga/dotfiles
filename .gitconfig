[user]
    name = Jason Morganson
    email = jason@morganson.me

[github]
    user = jasonmorganson

[credential]
    helper = cache --timeout=3600

[help]
    autocorrect = 1

[diff "sopsdiffer"]
    textconv = sops -d

[push]
    default = current

[color]
    ui = always
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    old = red bold
    new = green bold
    meta = yellow bold
    frag = magenta bold
    commit = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[includeIf "gitdir:~/cherre/"]
    path = ~/cherre/.gitconfig
