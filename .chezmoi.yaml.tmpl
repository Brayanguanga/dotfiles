{{- $interactive := true -}}
{{- /* Detect headless */ -}}
{{- if env "HEADLESS" -}}
{{- $interactive = false -}}
{{- /* Detect Coder */ -}}
{{- else if env "CODER_RUNTIME" -}}
{{- $interactive = false -}}
{{- /* Detect GitHub Codespaces */ -}}
{{- else if env "CODESPACES" -}}
{{- $interactive = false -}}
{{- /* Detect VSCode remote containers */ -}}
{{- else if env "REMOTE_CONTAINERS_IPC" -}}
{{- $interactive = false -}}
{{- else -}}
{{- /* Assume interactivity */ -}}
{{- $interactive = true -}}
{{- end -}}

{{- $user := env "USER" -}}
{{- if empty $user -}}
{{- if $interactive -}}
{{- $user = promptString "User" }}
{{- else -}}
{{- $user = .chezmoi.username -}}
{{- end -}}
{{- end -}}

{{- $name := env "NAME" -}}
{{- if empty $name -}}
{{- if $interactive -}}
{{- $name = promptString "Name" }}
{{- else -}}
{{- $name = .chezmoi.username -}}
{{- end -}}
{{- end -}}

{{- $email := env "EMAIL" -}}
{{- if empty $email -}}
{{- if $interactive -}}
{{- $email = promptString "Email" }}
{{- else -}}
{{- $email = printf "%s@%s" .chezmoi.username .chezmoi.fullHostname -}}
{{- end -}}
{{- end -}}

sourceDir: "{{ .chezmoi.sourceDir }}"
data:
  user: "{{ $user }}"
  name: "{{ $name }}"
  email: "{{ $email }}"