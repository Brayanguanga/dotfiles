# Language
export LANG='en_US.UTF-8'

# Terminal
export CLICOLOR=YES

# Editors
export EDITOR="vi"
export VISUAL="vi"
export NVIM_TUI_ENABLE_TRUE_COLOR=true

# Use VIM for manpages
#export MANPAGER="/bin/sh -c \"col -b | vi -c 'set ft=man ts=8 nomod nolist nonu noma nonumber norelativenumber laststatus=0 colorcolumn=0' -\""
export MANPAGER="nvim -c 'set ft=man' -"

# nvm
export NVM_DIR="$HOME/.nvm"

# Go
export GOPATH="$HOME/go"

# Python
export PYTHONDONTWRITEBYTECODE=1

# Homebrew
export HOMEBREW_GITHUB_API_TOKEN=72c1e9f5cccf940ed6fe9a83ca1943a3f0dcce82

# XCode
export DEVELOPER_DIR='/Applications/Xcode.app/Contents/Developer'

