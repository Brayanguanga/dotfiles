# Language
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# 10ms for key sequences
export KEYTIMEOUT=1

# Terminal
export CLICOLOR=YES

# Theme from https://materialshell.carloscuesta.me
# LS colors, made with http://geoff.greer.fm/lscolors
export LSCOLORS="exfxcxdxbxegedabagacad"
export LS_COLORS='di=34:ln=35:so=32:pi=33:ex=31:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43:'
export GREP_COLOR='1;33'

# History
HISTFILE=$HOME/.zsh_history
HISTSIZE=100000
SAVEHIST=$HISTSIZE

# Editors
export EDITOR="nvim"
export VISUAL="nvim"

# Use VIM for manpages
#export MANPAGER="/bin/sh -c \"col -b | vi -c 'set ft=man ts=8 nomod nolist nonu noma nonumber norelativenumber laststatus=0 colorcolumn=0' -\""
export MANPAGER="nvim -c 'set ft=man' -"

# Auto load Cherre env files
AUTOENV_FILE_ENTER=envs

# nvm
export NVM_DIR="$HOME/.nvm"
export NVM_LAZY_LOAD=true

# Go
export GOPATH="$HOME/go"

# Python
export PYTHONDONTWRITEBYTECODE=1

# XCode
export DEVELOPER_DIR='/Applications/Xcode.app/Contents/Developer'

# Docker
export DOCKER_BUILDKIT=1

# Helm
export HELM_TLS_ENABLE=true

# Postgres
export PGHOST=localhost

# Homebrew
if [[ "$OSTYPE" == "darwin"* ]]; then
    export HOMEBREW_PREFIX="/usr/local"
    export HOMEBREW_CELLAR="/usr/local/Cellar"
    export HOMEBREW_REPOSITORY="/usr/local/Homebrew"
else
    export HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew"
    export HOMEBREW_CELLAR="/home/linuxbrew/.linuxbrew/Cellar"
    export HOMEBREW_REPOSITORY="/home/linuxbrew/.linuxbrew/Homebrew"
fi

# asdf
export ASDF_DIR=$HOMEBREW_PREFIX/opt/asdf
export ASDF_DATA_DIR=$ASDF_DIR
